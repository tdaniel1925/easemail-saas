generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// TENANTS (Your SaaS customers)
// ============================================

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique // "acme-corp" - used in API calls
  isActive  Boolean  @default(true)
  plan      String   @default("free") // "free", "pro", "enterprise"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Legacy fields (kept for backward compatibility during migration)
  nylasGrantId   String?  @unique
  emailConnected Boolean  @default(false)
  connectedEmail String?
  provider       String?  // "google", "microsoft", "icloud", etc.
  connectedAt    DateTime?

  // Relations
  accounts               Account[]
  syncState              SyncState?
  logs                   ActivityLog[]
  integrationCredentials IntegrationCredential[]
  apiKeys                ApiKey[]
  usageRecords           UsageRecord[]
  emailFolders           EmailFolder[]
  contacts               Contact[]
  calendars              Calendar[]
  calendarEvents         CalendarEvent[]
}

// ============================================
// ACCOUNTS (Multiple email accounts per tenant)
// ============================================

model Account {
  id           String   @id @default(cuid())
  tenantId     String
  email        String
  provider     String   // "google", "microsoft", "yahoo", etc.
  nylasGrantId String   @unique
  isActive     Boolean  @default(true)
  isPrimary    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, email])
  @@index([tenantId, isActive])
}

// ============================================
// SYNC STATE
// ============================================

model SyncState {
  id           String    @id @default(cuid())
  tenantId     String    @unique
  lastSyncAt   DateTime?
  emailCursor  String?   // Nylas delta cursor for emails
  calendarCursor String? // Nylas delta cursor for calendar
  contactsCursor String? // Nylas delta cursor for contacts
  isSyncing    Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

// ============================================
// ACTIVITY LOGS
// ============================================

model ActivityLog {
  id        String   @id @default(cuid())
  tenantId  String
  action    String   // "list_emails", "send_email", "create_event", etc.
  status    String   // "success", "error"
  input     Json?
  output    Json?
  error     String?
  duration  Int?     // ms
  createdAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId, createdAt(sort: Desc)])
  @@index([action])
}

// ============================================
// INTEGRATION CREDENTIALS
// Store OAuth tokens for various integrations
// ============================================

model IntegrationCredential {
  id             String    @id @default(cuid())
  tenantId       String
  integrationId  String    // "nylas", "msgraph", "slack", etc.
  accountEmail   String?   // Email associated with this credential
  accessToken    String?   @db.Text
  refreshToken   String?   @db.Text
  expiresAt      DateTime?
  grantId        String?   // For Nylas-style integrations
  metadata       Json?     // Extra data (displayName, etc.)
  isActive       Boolean   @default(true)
  isPrimary      Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, integrationId, accountEmail])
  @@index([tenantId, integrationId, isActive])
}

// ============================================
// API KEYS
// For programmatic access to the API
// ============================================

model ApiKey {
  id          String    @id @default(cuid())
  tenantId    String
  name        String    // "Production Key", "Development", etc.
  keyHash     String    @unique // SHA-256 hash of the API key
  keyPrefix   String    // First 8 chars for identification (e.g., "bm_live_")
  scopes      String[]  // ["read:emails", "write:emails", "read:calendar", etc.]
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId, isActive])
  @@index([keyHash])
}

// ============================================
// USAGE TRACKING
// Track API usage for billing
// ============================================

model UsageRecord {
  id            String   @id @default(cuid())
  tenantId      String
  integrationId String   // "nylas", "msgraph", etc.
  tool          String   // "list_emails", "send_email", etc.
  count         Int      @default(1)
  period        String   // "2024-01" (year-month)
  createdAt     DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, integrationId, tool, period])
  @@index([tenantId, period])
}

// ============================================
// EMAIL FOLDERS
// Cache for email folders including custom ones
// ============================================

model EmailFolder {
  id          String   @id @default(cuid())
  tenantId    String
  providerId  String   // Folder ID from email provider (Nylas)
  name        String   // Folder display name
  type        String   // "inbox", "sent", "drafts", "trash", "spam", "archive", "custom"
  totalCount  Int      @default(0)
  unreadCount Int      @default(0)
  parentId    String?  // For nested folders
  path        String   // Full path like "Clients/Acme Corp"
  syncedAt    DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, providerId])
  @@index([tenantId, type])
  @@index([tenantId, name])
  @@index([tenantId, path])
}

// ============================================
// CONTACTS
// Cache for contacts from email provider
// ============================================

model Contact {
  id           String   @id @default(cuid())
  tenantId     String
  providerId   String   // Contact ID from email provider (Nylas)
  email        String?  // Primary email
  givenName    String?
  surname      String?
  displayName  String?  // Full display name
  companyName  String?
  jobTitle     String?
  phoneNumbers Json?    // Array of { number, type }
  emails       Json?    // Array of { email, type }
  addresses    Json?    // Array of { street, city, state, country, postalCode, type }
  birthday     DateTime?
  notes        String?  @db.Text
  photoUrl     String?
  groups       String[] // Contact group IDs
  source       String?  // "address_book", "domain", etc.
  syncedAt     DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, providerId])
  @@index([tenantId, email])
  @@index([tenantId, displayName])
  @@index([tenantId, companyName])
}

// ============================================
// CALENDARS
// Cache for calendars from email provider
// ============================================

model Calendar {
  id          String   @id @default(cuid())
  tenantId    String
  providerId  String   // Calendar ID from email provider (Nylas)
  name        String
  description String?
  location    String?
  timezone    String?
  isPrimary   Boolean  @default(false)
  isReadOnly  Boolean  @default(false)
  hexColor    String?  // Calendar color
  syncedAt    DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  events CalendarEvent[]

  @@unique([tenantId, providerId])
  @@index([tenantId, isPrimary])
}

// ============================================
// CALENDAR EVENTS
// Cache for calendar events
// ============================================

model CalendarEvent {
  id            String    @id @default(cuid())
  tenantId      String
  calendarId    String    // Local calendar ID
  providerId    String    // Event ID from email provider (Nylas)
  title         String
  description   String?   @db.Text
  location      String?
  startTime     DateTime
  endTime       DateTime
  allDay        Boolean   @default(false)
  status        String?   // "confirmed", "tentative", "cancelled"
  busy          Boolean   @default(true)
  recurrence    Json?     // Recurrence rules
  participants  Json?     // Array of { email, name, status }
  organizer     Json?     // { email, name }
  reminders     Json?     // Array of reminder settings
  conferencing  Json?     // Video conferencing details
  masterEventId String?   // For recurring event instances
  syncedAt      DateTime  @default(now())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  calendar Calendar @relation(fields: [calendarId], references: [id], onDelete: Cascade)

  @@unique([tenantId, providerId])
  @@index([tenantId, calendarId])
  @@index([tenantId, startTime])
  @@index([tenantId, endTime])
}
