generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// TENANTS (Your SaaS customers)
// ============================================

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique // "acme-corp" - used in API calls
  isActive  Boolean  @default(true)
  plan      String   @default("free") // "free", "pro", "enterprise"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Legacy fields (kept for backward compatibility during migration)
  nylasGrantId   String?  @unique
  emailConnected Boolean  @default(false)
  connectedEmail String?
  provider       String?  // "google", "microsoft", "icloud", etc.
  connectedAt    DateTime?

  // Relations
  accounts               Account[]
  syncState              SyncState?
  logs                   ActivityLog[]
  integrationCredentials IntegrationCredential[]
  apiKeys                ApiKey[]
  usageRecords           UsageRecord[]
  emailFolders           EmailFolder[]
}

// ============================================
// ACCOUNTS (Multiple email accounts per tenant)
// ============================================

model Account {
  id           String   @id @default(cuid())
  tenantId     String
  email        String
  provider     String   // "google", "microsoft", "yahoo", etc.
  nylasGrantId String   @unique
  isActive     Boolean  @default(true)
  isPrimary    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, email])
  @@index([tenantId, isActive])
}

// ============================================
// SYNC STATE
// ============================================

model SyncState {
  id           String    @id @default(cuid())
  tenantId     String    @unique
  lastSyncAt   DateTime?
  emailCursor  String?   // Nylas delta cursor for emails
  calendarCursor String? // Nylas delta cursor for calendar
  contactsCursor String? // Nylas delta cursor for contacts
  isSyncing    Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

// ============================================
// ACTIVITY LOGS
// ============================================

model ActivityLog {
  id        String   @id @default(cuid())
  tenantId  String
  action    String   // "list_emails", "send_email", "create_event", etc.
  status    String   // "success", "error"
  input     Json?
  output    Json?
  error     String?
  duration  Int?     // ms
  createdAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId, createdAt(sort: Desc)])
  @@index([action])
}

// ============================================
// INTEGRATION CREDENTIALS
// Store OAuth tokens for various integrations
// ============================================

model IntegrationCredential {
  id             String    @id @default(cuid())
  tenantId       String
  integrationId  String    // "nylas", "msgraph", "slack", etc.
  accountEmail   String?   // Email associated with this credential
  accessToken    String?   @db.Text
  refreshToken   String?   @db.Text
  expiresAt      DateTime?
  grantId        String?   // For Nylas-style integrations
  metadata       Json?     // Extra data (displayName, etc.)
  isActive       Boolean   @default(true)
  isPrimary      Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, integrationId, accountEmail])
  @@index([tenantId, integrationId, isActive])
}

// ============================================
// API KEYS
// For programmatic access to the API
// ============================================

model ApiKey {
  id          String    @id @default(cuid())
  tenantId    String
  name        String    // "Production Key", "Development", etc.
  keyHash     String    @unique // SHA-256 hash of the API key
  keyPrefix   String    // First 8 chars for identification (e.g., "bm_live_")
  scopes      String[]  // ["read:emails", "write:emails", "read:calendar", etc.]
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId, isActive])
  @@index([keyHash])
}

// ============================================
// USAGE TRACKING
// Track API usage for billing
// ============================================

model UsageRecord {
  id            String   @id @default(cuid())
  tenantId      String
  integrationId String   // "nylas", "msgraph", etc.
  tool          String   // "list_emails", "send_email", etc.
  count         Int      @default(1)
  period        String   // "2024-01" (year-month)
  createdAt     DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, integrationId, tool, period])
  @@index([tenantId, period])
}

// ============================================
// EMAIL FOLDERS
// Cache for email folders including custom ones
// ============================================

model EmailFolder {
  id          String   @id @default(cuid())
  tenantId    String
  providerId  String   // Folder ID from email provider (Nylas)
  name        String   // Folder display name
  type        String   // "inbox", "sent", "drafts", "trash", "spam", "archive", "custom"
  totalCount  Int      @default(0)
  unreadCount Int      @default(0)
  parentId    String?  // For nested folders
  path        String   // Full path like "Clients/Acme Corp"
  syncedAt    DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, providerId])
  @@index([tenantId, type])
  @@index([tenantId, name])
  @@index([tenantId, path])
}
